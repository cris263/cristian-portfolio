---
const projects = [
  {
    title: "Página Administrable CESE - Facultad de Económicas",
    description: "Página web totalmente administrable para la Facultad de Económicas de la Universidad de los Llanos. Permite a funcionarios no técnicos gestionar contenido cumpliendo todos los requerimientos institucionales.",
    image: "./cese.jpg",
    tags: ["React", "SpringBoot", "Strapi"],
    links: {
      code: "#",
      preview: "#"
    }
  },
  {
    title: "Clon de Cinecolombia",
    description: "Proyecto personal que replica la funcionalidad de Cinecolombia. Cuenta con envío de correos, lógica de negocio funcional y panel de administración completo.",
    image: "./cine.jpg",
    tags: ["PHP", "Tailwind CSS"],
    links: {
      code: "#",
      preview: "#"
    }
  },
  {
    title: "Algoritmo de Recomendación de Películas",
    description: "Aplicación por consola que gestiona usuarios, películas y géneros. Implementa un algoritmo de recomendación basado en grafos y estructuras de datos que sugiere películas según preferencias, directores, actores y géneros.",
    image: "/project-algorithm.jpg",
    tags: ["C++", "MySQL", "Grafos"],
    links: {
      code: "#",
      preview: "#"
    }
  }
];
---

<section id="proyectos" class="projects">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="16,18 22,12 16,6"></polyline>
          <polyline points="8,6 2,12 8,18"></polyline>
        </svg>
        Proyectos
      </h2>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="project-card" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="project-image">
            <img src={project.image} alt={project.title} />
            <div class="project-overlay">
              <div class="project-links">
                <a href={project.links.code} class="project-link" title="Ver código">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                  </svg>
                  Code
                </a>
                <a href={project.links.preview} class="project-link" title="Ver proyecto">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15,3 21,3 21,9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  Preview
                </a>
              </div>
            </div>
          </div>
          
          <div class="project-content">
            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
            
            <div class="project-tags">
              {project.tags.map(tag => (
                <span class="project-tag">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                    <path d="M2 17l10 5 10-5M2 12l10 5 10-5"></path>
                  </svg>
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    padding: 6rem 0;
    background: #1a1b26;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 2.5rem;
    font-weight: 700;
    color: #c9d1d9;
    margin-bottom: 1rem;
  }

  .section-title svg {
    color: #7aa2f7;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .project-card {
    background: rgba(30, 31, 44, 0.5);
    border: 1px solid rgba(65, 72, 104, 0.3);
    border-radius: 1rem;
    overflow: hidden;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    position: relative;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #7aa2f7, #bb9af7, #f7768e);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-10px);
    border-color: rgba(122, 162, 247, 0.5);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-image {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, #414868, #24283b);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.1);
  }

  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(26, 27, 38, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(122, 162, 247, 0.2);
    border: 1px solid rgba(122, 162, 247, 0.5);
    border-radius: 0.5rem;
    color: #7aa2f7;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .project-link:hover {
    background: rgba(122, 162, 247, 0.3);
    transform: translateY(-2px);
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #c9d1d9;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .project-description {
    color: #a9b1d6;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.75rem;
    background: rgba(122, 162, 247, 0.1);
    border: 1px solid rgba(122, 162, 247, 0.3);
    border-radius: 50px;
    color: #7aa2f7;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .project-tag svg {
    width: 12px;
    height: 12px;
  }

  @media (max-width: 768px) {
    .projects {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .project-card {
      margin: 0 1rem;
    }

    .project-content {
      padding: 1rem;
    }

    .project-overlay {
      opacity: 1;
      background: rgba(26, 27, 38, 0.6);
    }
  }

  @media (max-width: 480px) {
    .project-links {
      flex-direction: column;
      width: 100%;
      max-width: 200px;
    }

    .project-link {
      justify-content: center;
    }
  }
</style>
