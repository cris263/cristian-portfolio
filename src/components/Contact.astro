    color: #a9b1d6;
    line-height: 1.6;
  }

  .contact-text {
    margin-bottom: 2rem;
  }

  .contact-text p {
    color: #a9b1d6;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .method-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(30, 31, 44, 0.5);
    border: 1px solid rgba(65, 72, 104, 0.3);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .method-item:hover {
    transform: translateY(-2px);
    border-color: rgba(122, 162, 247, 0.5);
  }

  .primary-method {
    border-color: rgba(224, 175, 104, 0.5);
    background: rgba(224, 175, 104, 0.1);
  }

  .method-icon {
    font-size: 1.5rem;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(122, 162, 247, 0.1);
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .method-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #c9d1d9;
    margin-bottom: 0.25rem;
  }

  .method-description {
    font-size: 0.875rem;
    color: #7c7c7c;
    margin-bottom: 0.5rem;
  }

  .method-link {
    color: #7aa2f7;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .method-link:hover {
    color: #9bb8f5;
  }

  .contact-form-container {
    background: rgba(30, 31, 44, 0.5);
    border: 1px solid rgba(65, 72, 104, 0.3);
    border-radius: 1rem;
    padding: 2rem;
    backdrop-filter: blur(10px);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
