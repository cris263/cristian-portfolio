    flex-shrink: 0;
  }

  .social-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .social-name {
    font-weight: 500;
    color: #c9d1d9;
    font-size: 0.875rem;
  }

  .social-handle {
    font-size: 0.75rem;
    color: #7c7c7c;
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .contact-form-container {
      padding: 1.5rem;
    }

